<Window x:Class="ChatApp.Dialogs.RequestReceivedDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.Dialogs"
        mc:Ignorable="d"
        Title="ConnectionDialog" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Height="Auto" Width="Auto" MinWidth="220">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Grid.Column="0" Margin="10" Content="Accept" Click="Button_Accept_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Margin="10" Content="Reject" Click="Button_Reject_Click"/>
        <TextBlock x:Name="InfoText" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="220" Margin="10"/>
    </Grid>
</Window>
